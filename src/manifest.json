{
  "name": "Content Annotator",
  "version": "1.0",
  "description": "Content annotator application developed by Ismail Uluturk and Onur Varol",
  "permissions": ["activeTab", "declarativeContent", "storage", "downloads", "tabs"],
  "options_page": "options/options.html",
  "background": {
    "scripts": [
		  "config.js",
		  "background/background.js"
	],
    "persistent": false
  },
  "browser_action": {
    "default_title": "social-annotate",
    "default_popup": "popup/popup.html",
	"default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "content_scripts": [
   {
     "matches": ["https://twitter.com/*"],
  	 "css": [ 
       "content-scripts/twitter-user/inject.css",
       "content-scripts/twitter-tweet/inject.css" 
     ],
  	 "js": [
  		 "dep/jsonform/deps/jquery.min.js",
  		 "dep/jsonform/deps/underscore.js",
  		 "dep/jsonform/deps/opt/jsv.js",
  		 "dep/jsonform/lib/jsonform.js",
		 "content-scripts/shared/shared.js",
  		 "content-scripts/twitter-user/inject.js",
         "content-scripts/twitter-tweet/inject.js" 
  	 ]
   }
  ],
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2
}
